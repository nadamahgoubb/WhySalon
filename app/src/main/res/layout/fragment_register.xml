<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
      android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_20sdp"          android:layout_height="match_parent"
            tools:context=".ui.fragment.auth.RegisterFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lyt_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView

                        android:id="@+id/iv_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/header"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView

                        android:id="@+id/img"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:paddingBottom="@dimen/_24sdp"
                        android:src="@drawable/logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- <androidx.constraintlayout.widget.ConstraintLayout
                         android:id="@+id/lyt_bottom"
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                     android:backgroundTint="@color/grey_200"
                         app:layout_constraintTop_toBottomOf="@+id/lyt_header"
                     app:layout_constraintBottom_toBottomOf="parent">

                     </androidx.constraintlayout.widget.ConstraintLayout>-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lyt_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_140sdp"
                    android:background="@drawable/bg_btn_white"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/lyt_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_btn_white_grey_border"
                            android:drawableStart="@drawable/user"
                            android:drawablePadding="@dimen/_8sdp"
                            android:hint="@string/enter_your_name"
android:id="@+id/et_name"

                            android:minHeight="@dimen/_40sdp"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textColorHint="@color/grey3"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_btn_white_grey_border"
                android:id="@+id/et_email"            android:drawableStart="@drawable/mail"
                            android:drawablePadding="@dimen/_8sdp"
                            android:hint="@string/enter_your_email"
                            android:minHeight="@dimen/_40sdp"

                            android:inputType="textEmailAddress"                       android:paddingHorizontal="@dimen/_10sdp"
                            android:textColorHint="@color/grey3"
                            android:textSize="@dimen/_10sdp"
                            app:drawableStartCompat="@drawable/mail" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                           >

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/lyt_pass"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:hint=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:hintAnimationEnabled="false"
                                app:hintEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView2"

                                >


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="@dimen/_40sdp"     
                                    android:padding="@dimen/_4sdp" 
                                    android:autofillHints="password"
                                     android:drawablePadding="@dimen/_8sdp"
                                    android:background="@drawable/bg_btn_white_grey_border"
                                    android:drawableStart="@drawable/padlock"
                                    android:hint="@string/enter_password"
                                    android:inputType="textPassword"
                                    android:textAlignment="viewStart"
                                    android:textColorHint="@color/grey3"

                                    android:textSize="@dimen/_10sdp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                          >

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/lyt_confirm_pass"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                 app:hintAnimationEnabled="false"
                                app:hintEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView2"

                                >


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_password_comfirm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="@dimen/_40sdp"
                                    android:padding="@dimen/_4sdp"                                     android:drawablePadding="@dimen/_8sdp"
                                     android:drawableStart="@drawable/padlock"
                                    android:autofillHints="password"
                                    android:background="@drawable/bg_btn_white_grey_border"
                                    android:hint="@string/confirm_password"
                                    android:inputType="textPassword"
                                    android:textAlignment="viewStart"
                                    android:textColorHint="@color/grey3"

                                    android:textSize="@dimen/_10sdp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_signup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:backgroundTint="@color/black"
                            android:gravity="center"
                            android:text="@string/sign_up"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            app:cornerRadius="@dimen/_6sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_4sdp"
                            android:weightSum="10">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1sp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="4.5"
                                android:background="@color/grey_500" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/or"
                                android:textColor="@color/grey_500"
                                android:textSize="@dimen/_11sdp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1sp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="4.5"
                                android:background="@color/grey_500" />
                        </LinearLayout>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_google"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                             android:backgroundTint="@color/light_blue"
                            app:icon="@drawable/ic_google"
                            app:iconGravity="textStart"
                            android:text="@string/sign_up_with_google"
app:iconTint="@null"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:cornerRadius="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_4sdp"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/one_of_us"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_signin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="@string/login"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_contine_as_guest"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
 android:paddingHorizontal="@dimen/_35sdp"                    android:backgroundTint="@color/grey4"
                    android:gravity="center"
                    android:icon="@drawable/ic_google"
                    android:text="@string/continue_as_guest"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:cornerRadius="@dimen/_6sdp"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/_5sdp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/lyt_data"
                    app:layout_constraintEnd_toEndOf="@id/lyt_data"
                    app:layout_constraintStart_toStartOf="@id/lyt_data"
                    app:layout_constraintTop_toBottomOf="@id/lyt_data" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>