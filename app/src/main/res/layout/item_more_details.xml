<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/card"
    android:paddingVertical="@dimen/_20sdp"
    android:minHeight="@dimen/_80sdp"
     android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_type"

            android:layout_gravity="center"
             android:src="@drawable/ic_women_hair_grey"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
             android:backgroundTint="@color/grey"
            app:cardCornerRadius="@dimen/_12sdp"

            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:paddingVertical="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@id/iv_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_type"
        app:layout_constraintTop_toTopOf="@id/iv_type">

        <TextView
            android:id="@+id/tv_service"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_13sdp"
            android:paddingStart="@dimen/_2sdp"
            android:text="@string/normal_hair"
            android:textColor="@color/grey_1000"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/lyt_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_service"
            app:layout_constraintTop_toBottomOf="@id/tv_service">


            <ImageView
                android:id="@+id/iv_money"

                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/reminder"

                app:tint="@color/grey_1000" />

            <TextView
                android:id="@+id/tv_money_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/_5sdp"
                android:text="Price from: 50 Sar"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_clock"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clock"


                app:tint="@color/grey_1000" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/_6sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"
                android:text="25 Min"
                android:textColor="@color/grey_1000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


         </LinearLayout>


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
          android:background="@drawable/selector_cb_circle"
android:button="@null"

        app:layout_constraintBottom_toBottomOf="@id/your_rectangle"
        app:layout_constraintEnd_toEndOf="@id/your_rectangle"
        app:layout_constraintStart_toEndOf="@id/your_rectangle"
        app:layout_constraintTop_toTopOf="@id/your_rectangle"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
