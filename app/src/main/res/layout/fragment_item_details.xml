<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.example.whysalon.base.OnlyVerticalSwipeRefreshLayout
        android:id="@+id/swiperefresh_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layoutDirection="inherit"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_10sdp"
                            app:tabBackground="@drawable/tab_selector"-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
              app:cardElevation="0dp"      android:layout_height="@dimen/_60sdp"
                    android:backgroundTint="@color/transparent"
                app:cardBackgroundColor="@color/transparent"     app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                  >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:paddingTop="@dimen/_5sdp"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardback"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:backgroundTint="@color/transparent"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_title"
                            app:strokeColor="@color/white"
                            app:strokeWidth="@dimen/_1sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_arrow"

                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_notify"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:backgroundTint="@color/transparent"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_title"
                            app:strokeColor="@color/white"
                            app:strokeWidth="@dimen/_1sdp">



                            <ImageView
                                android:id="@+id/iv_icon_notifaction"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notifaction"

                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="Hair Cut"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp"
                            app:layout_constraintEnd_toEndOf="parent"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
            app:tabMaxWidth="@dimen/_10sdp"        android:layout_marginBottom="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabBackground="@drawable/dot_selector"
                    app:tabGravity="center"
                     app:tabIndicatorHeight="0dp"
                    android:elevation="@dimen/_90sdp"
                    />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                     android:layout_marginBottom="@dimen/_30sdp"
                    android:visibility="gone"                 app:layout_constraintBottom_toBottomOf="@+id/viewpager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                     app:tabBackground="@drawable/dot_selector"
                    app:tabIndicatorColor="@color/black"
                    app:tabGravity="center"
                    android:elevation="@dimen/_90sdp"
                    app:tabIndicatorHeight="0dp" />
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:visibility="gone"             android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/transparent"
        android:layout_marginBottom="@dimen/_40sdp"     app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/viewpager"
                    app:selectedDotColor="@color/blue"
                    app:tabBackground="@drawable/dot_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lyt_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_285sdp"
                    android:background="@drawable/bg_btn_white_rounded_top">


                    <TextView
                        android:id="@+id/tv_services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:text="@string/hair_cut"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/lyt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_services">


                        <ImageView
                            android:id="@+id/iv_money"

                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/reminder"

                            app:tint="@color/grey_1000" />

                        <TextView
                            android:id="@+id/tv_money_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/_5sdp"
                            android:text="Price from: 50 Sar"
                            android:textColor="@color/grey_1000"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_clock"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_time"


                            app:tint="@color/grey_1000" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_6sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:text="25 - 30 Min"
                            android:textColor="@color/grey_1000"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_6sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingStart="@dimen/_12sdp"
                        android:text="@string/about_this_service"
                        android:textColor="@color/grey_1000"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lyt_time" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/lyt_time"
                        app:layout_constraintTop_toBottomOf="@id/tv_1" />


                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@color/white"
                        android:elevation="@dimen/_90sdp"
                        android:gravity="bottom"
                        android:paddingVertical="@dimen/_20sdp"
                        android:shadowColor="@color/grey_dark_"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lyt_nxt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@drawable/bg_btn_black_white_border"
                            android:paddingHorizontal="@dimen/_10sdp"

                            >

                            <TextView
                                android:id="@+id/btn_add_to_basket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_10sdp"
                                android:text="Add to Basket"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--
                                         <androidx.recyclerview.widget.RecyclerView
                                             android:id="@+id/rec_offers"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                              android:clipToPadding="false"
                                          android:orientation="vertical"
                                       android:layout_margin="@dimen/_10sdp"      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                             app:layout_constraintEnd_toEndOf="parent"
                                             app:layout_constraintStart_toStartOf="parent"
                                             app:layout_constraintTop_toBottomOf="@+id/tv_offers_view_all"
                                             tools:listitem="@layout/item_service_details" />-->


        </ScrollView>
    </com.example.whysalon.base.OnlyVerticalSwipeRefreshLayout>


</layout>