<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_white"
    android:layout_marginVertical="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="@dimen/_12sdp"

            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_wish_item"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/beard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="@id/card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card">

            <TextView
                android:id="@+id/tv_service"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/hair_service"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
             android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"/>



            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
 android:text="Our highly recomended team can takecar of any kind of hair"
android:textColor="@color/grey_400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_service"
                app:layout_constraintTop_toBottomOf="@id/tv_service" />


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_5sdp"
    app:layout_constraintStart_toStartOf="@id/tv_service"
    app:layout_constraintTop_toBottomOf="@id/tv_desc"
  android:gravity="center"  >

    <TextView
        android:id="@+id/tv_explore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:text="@string/explore"
        android:textColor="@color/black"
    android:gravity="center"    android:textSize="@dimen/_11sdp"
        android:drawableTint="@color/black"
    app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       />
    <ImageView
        android:id="@+id/iv_arrow"

        app:layout_constraintStart_toEndOf="@id/tv_explore"
        app:layout_constraintTop_toTopOf="@id/tv_explore"
        android:gravity="center"      app:layout_constraintBottom_toBottomOf="@id/tv_explore"
            android:layout_width="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"
         android:src="@drawable/ic_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>